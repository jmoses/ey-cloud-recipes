check process delayed_job_<%= @app_name %>
  with pidfile /data/<%= @app_name %>/shared/pids/job_runner.pid
  start program = "/data/<%= @app_name %>/shared/bin/delayed_job.sh <%= @app_name %> start <%= @node[:environment][:framework_env] %> start"
  stop program = "/data/<%= @app_name %>/shared/bin/delayed_job.sh <%= @app_name %> stop <%= @node[:environment][:framework_env] %> stop"
  uid <%= @user %>
  gid <%= @user %>
  group delayed_job_<%= @app_name %>
