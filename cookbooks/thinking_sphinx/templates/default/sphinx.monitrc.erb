  with pidfile /data/<%= @app_name %>/shared/searchd.<%= @app_env %>.pid
  start program = "cd /data/<%= @app_name %>/current && RAILS_ENV=<%= @app_env %> rake thinking_sphinx:forgiving_start" as uid <%= @user %> and gid <%= @user %>
